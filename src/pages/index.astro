---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Typography from "../components/Typography.astro";
const pageTitle = "Electricians of Dallas";
---
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <Typography />
        <title>{pageTitle}</title>
        <style>
            .services-section {
                background-color: var(--clr-light);
                border-bottom: 2px solid var(--clr-dark);
                border-top: 2px solid var(--clr-dark);
            }
            .services__list {
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                min-width: 100%;
                margin: 0 auto;
            }
            .services__list li {
            }
            .brand-hero {
                color: var(--clr-accent);
                min-height: 50vh;
                height: 80vh;
                background-image: url('/panel-wires.png');
                background-position: 10% 19%;
                background-size: cover;
                background-repeat: no-repeat;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                align-items: end;
            }
            .brand-slogan-el {
                margin: 0 auto;
                color: var(--clr-light);
                text-align: center;
                font-style: italic;
                text-shadow: 0px 0px 1px #FF3131;
            }   

            .brand-slogan-el span {
                display: block;
            }
            .brand-intro-el {
                color: var(--clr-light);
                align-self: end;
                justify-self: center;
                text-shadow: 0px 0px 1px #FF3131;
            }
            .call-button {
                background-color: #FF3131;
                color: var(--clr-light);
                width: 100%;
                text-align: center;
                padding: 1rem;
                box-shadow: 12px 12px 2px 1px var(--clr-dark);
                margin-bottom: 1em;
            }
            .our-electricians { 
                border-top: 8px solid var(--clr-dark);
            }

            @media (min-width: 1024px) {
            .header-contact-button {
             justify-content: space-evenly;
            }
            .brand-hero {
                height: 80vh;
                background-position: left 50%;
                background-size: cover;
                width: 100%;
                align-items: end;
            }
            .brand-intro-el {
                align-self: end;
                justify-self: center;
            }
            .services__list {
                padding: 0 2em;
                font-weight: 600;
            }
            .brand-slogan-el span {
                display: inline;
            }
            .call-button {
                width: 50%;
            }
            }
        </style>
    </head>
    <body>
        <Header />
        <section class="services-section">
            <ul class="services__list">
                <li><h3>Commercial</h3></li>
                <li><h3>Residential</h3></li>
                <li><h3>Indoor</h3></li>
                <li><h3>Outdoor</h3></li>
                <li><h3>General</h3></li> 
            </ul>
        </section>
        <section class="brand-hero">
            <h1 class="brand-slogan-el">Your Electricians <span>For Life</span></h1>
            <!-- <h1 class="brand-intro-el">Since 2003</h1> -->
            <button class="call-button">
                <h2>Free Estimates</h2>
                <h3>Call Now <i class="fa-solid fa-phone" style="color: var(--clr-light);"></i>
                <span>(214) 000-000</span></h3>
            </button>
        </section>
        <section class="our-electricians">
            <h1>20+ Years Experience</h1>
            <h3>Family owned and operated Electrical Contracting Company servicing both residential and commercial customers since 2003.</h3>
        </section>
        <script>
            import "../scripts/menu.js";
        </script>
    </body>
</html>
